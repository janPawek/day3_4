{% extends 'base.html.twig' %} {% block title %}Product{% endblock %} {% block
body %}
<div class="container">
  <h1>Product</h1>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title">{{ product.name }}</h5>
      <p>{{ product.price }}</p>

      <p class="card-text">
        {{ product.description }}
      </p>

      <p class="card-text">
        {{ status.name }}
      </p>
      <a class="btn btn-secondary" href="{{ path('app_product_index') }}"
        >back to list</a
      >

      <a
        class="btn btn-warning"
        href="{{ path('app_product_edit', { id: product.id }) }}"
        >edit</a
      >

      {{ include("product/_delete_form.html.twig") }}
      <hr />
      <p class="text-muted">
        {{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}
      </p>
    </div>
  </div>
</div>
{% endblock %}
