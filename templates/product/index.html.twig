{% extends 'base.html.twig' %} {% block title %}Product index{% endblock %} {%
block body %}
<h1>Product index</h1>

<div class="container">
  <a class="btn btn-primary mb-3" href="{{ path('app_product_new') }}"
    >Create new</a
  >

  <div class="row row-cols-3">
    {% for product in products %}
    <div class="p-3">
      <div class="card">
        <img src="{{ asset('uploads/' ~ product.picture ) }}" alt="" />
        <div class="card-body">
          <h5 class="card-title">{{ product.name }}</h5>
          <p>{{ product.price }}</p>
          <p class="card-text">{{ product.description }}</p>
          <a
            class="btn btn-success"
            href="{{ path('app_product_show', { id: product.id }) }}"
            >show</a
          >
          <a
            class="btn btn-warning"
            href="{{ path('app_product_edit', { id: product.id }) }}"
            >edit</a
          >
        </div>
      </div>
    </div>
    {% else %}

    <h2>No products found</h2>

    {% endfor %}
  </div>
</div>

{% endblock %}
